{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "animu",
  "version": "0.3.1",
  "identifier": "animu",
  "build": {
    "beforeDevCommand": "npm run webdev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Animu",
        "resizable": true,
        "width": 1500,
        "height": 800,
        "backgroundColor": "#ffffff"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "category": "Video",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
